<h1>Booking Page</h1>
<fieldset>
  <legend>Trip Details</legend>
  <h3>Flight # <%= @flight.name %></h3>
  <h3>
  <%= @flight.from_airport.name %> -> <%= @flight.to_airport.name %>
  </h3>
  <h4>Date <%= @booking.date[0,10] %></h4>
  <%= form_for @booking do |f| %>
  <%= f.hidden_field :date %>
  <%= f.hidden_field :flight_id %>

      <%= f.fields_for :passangers do |passanger| %>

          <br>

          <%= passanger.label :name %>
          <%= passanger.text_field :name %>
          <br>
          <%= passanger.label :email %>
          <%= passanger.text_field :email %>
          <br>

      <% end %>

    <br>
    <%= f.submit "Booking" %>

  <% end %>
</fieldset>
